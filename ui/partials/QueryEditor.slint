import { TextEdit, Button } from "std-widgets.slint";
import { CButton } from "../widgets/CButton.slint";
export component QueryEditor inherits Rectangle {
    // #region Properties
    in-out property <string> query_text;
    property <string> placeholder: "Escribe tus consultas SQL aquÃ­...";
    // #endregion
    // #region Callbacks
    callback rExecuteQuery();
    // #endregion

    VerticalLayout {
        width: 100%;
        height: 100%;
        padding: 10px;
        spacing: 10px;
        CButton {
